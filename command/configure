#!/bin/bash

set -e

. $(dirname $0)/base

WORKDIR "/work/out/${QEMU_SRC_BASENAME}"
RUN "/work/src/${QEMU_SRC_BASENAME}/configure" \
    --prefix="/work/dst/${QEMU_ARTIFACT_BASENAME}" \
    --disable-debug-info --disable-werror \
    --enable-system --enable-linux-user \
    --target-list=x86_64-softmmu,x86_64-linux-user \
    --enable-kvm \
    --enable-virtfs \
    --enable-qcow1 --enable-vmdk \
    --enable-fuse \
    --enable-cap-ng \
    --enable-slirp \
    --enable-libusb \
    --enable-vnc --enable-vnc-jpeg --enable-png \
    --enable-sdl --enable-sdl-image \
    --enable-fdt \
    --enable-linux-aio --enable-linux-io-uring \
    --enable-pixman \
    --enable-vvfat \
    --enable-zstd \
    --enable-strip \
    --enable-lto \
    --static
